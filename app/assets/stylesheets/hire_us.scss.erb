@import "foundation/components/panels";

body {  
  background-image: url( <%= asset_path 'celestial_birth_ateorams_ol.jpg' %> );
  background-repeat:no-repeat;  
  background-color:black; background-size: cover; 
};



.form-heading { color: white; }
.required {
  font-size: 22px;
  color: FireBrick; 
}


// input {
